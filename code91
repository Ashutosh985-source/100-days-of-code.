#include <stdio.h>
#include <string.h>

int main() {
    // Declare a string with enough space
    char str[150];
    int i, j;

    // Prompt the user for input
    printf("Enter a string: ");
    // Use fgets for safe input that can include spaces
    fgets(str, sizeof(str), stdin);

    // Remove the newline character that fgets adds at the end
    str[strcspn(str, "\n")] = 0;

    // 'i' is the read index, 'j' is the write index
    for (i = 0, j = 0; str[i] != '\0'; i++) {
        char ch = str[i];

        // Check if the character is NOT a vowel (both lowercase and uppercase)
        if (ch != 'a' && ch != 'e' && ch != 'i' && ch != 'o' && ch != 'u' &&
            ch != 'A' && ch != 'E' && ch != 'I' && ch != 'O' && ch != 'U') {
            
            // If it's a consonant (or any other character), copy it to the j-th position
            str[j] = str[i];
            
            // Increment the write index
            j++;
        }
    }

    // After the loop, place the null terminator to mark the end of the new string
    str[j] = '\0';

    printf("String after removing vowels: %s\n", str);

    return 0;
}