#include <stdio.h>

int main() {
    int i, j;

    // Part 1: Ascending section (handles blocks of 1, 3, and 5 asterisks)
    for (i = 1; i <= 3; i++) {
        // This inner loop prints the required number of asterisks for the block.
        // The formula (2 * i - 1) gives us the sequence 1, 3, 5.
        for (j = 1; j <= (2 * i - 1); j++) {
            printf("*\n");
        }
        // Print a separating blank line after the block of asterisks
        printf("\n");
    }

    // Part 2: Descending section (handles blocks of 3 and 1 asterisks)
    for (i = 2; i >= 1; i--) {
        // This inner loop uses the same formula to get the sequence 3, 1.
        for (j = 1; j <= (2 * i - 1); j++) {
            printf("*\n");
        }
        
        // Print a separator only if it's not the final block (i.e., when i > 1).
        if (i > 1) {
            printf("\n");
        }
    }

    return 0;
}