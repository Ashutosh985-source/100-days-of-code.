#include <stdio.h>

int main() {
    int num;
    int i;

    // Prompt the user for a number
    printf("Enter a positive integer: ");
    scanf("%d", &num);

    // Input validation
    if (num < 0) {
        printf("Please enter a non-negative integer.\n");
        return 1;
    }

    printf("The binary representation of %d is: ", num);

    // Find the number of bits in an integer (e.g., 32 bits)
    // We start from the most significant bit and work our way down
    for (i = 31; i >= 0; i--) {
        // Use a bitmask to check the i-th bit
        int k = num >> i;

        // The expression (k & 1) will be 1 if the bit is set, and 0 otherwise
        if (k & 1) {
            printf("1");
        } else {
            printf("0");
        }
    }
    printf("\n");

    return 0;
}