#include <stdio.h>

int main() {
    int arr[100];
    int size, i;
    int positive_count = 0;
    int negative_count = 0;
    int zero_count = 0;

    // 1. Get the size of the array from the user
    printf("Enter the size of the array: ");
    scanf("%d", &size);

    // 2. Get the array elements from the user
    printf("Enter %d elements:\n", size);
    for (i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    // 3. Loop through the array to count elements
    for (i = 0; i < size; i++) {
        if (arr[i] > 0) {
            positive_count++;
        } else if (arr[i] < 0) {
            negative_count++;
        } else {
            zero_count++;
        }
    }

    // 4. Print the results
    printf("Positive numbers: %d\n", positive_count);
    printf("Negative numbers: %d\n", negative_count);
    printf("Zeroes: %d\n", zero_count);

    return 0;
}