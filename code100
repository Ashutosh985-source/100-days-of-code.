#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int i, j, k, len;

    // --- Get input from the user ---
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = 0; // Remove trailing newline

    len = strlen(str);
    printf("All substrings of \"%s\" are:\n", str);

    // --- Generate and print all substrings ---

    // Loop 1: Selects the starting character of the substring
    for (i = 0; i < len; i++) {
        
        // Loop 2: Selects the ending character of the substring
        for (j = i; j < len; j++) {
            
            // Loop 3: Prints the characters from start (i) to end (j)
            for (k = i; k <= j; k++) {
                printf("%c", str[k]);
            }
            
            // Print a newline to separate substrings
            printf("\n");
        }
    }

    return 0;
}