#include <stdio.h>

int main() {
    FILE *fp;
    char filename[50];
    char ch;

    // Step 1: Ask the user for a filename
    printf("Enter the filename: ");
    scanf("%s", filename);

    // Step 2: Try to open the file in read mode
    fp = fopen(filename, "r");

    // Step 3: Check if the file exists
    if (fp == NULL) {
        printf("Error: File does not exist!\n");
        return 1;
    }

    // Step 4: If file exists, display success message
    printf("File opened successfully.\n");
    printf("File content:\n\n");

    // Step 5: Read and display the file content
    while ((ch = fgetc(fp)) != EOF) {
        putchar(ch);
    }

    // Step 6: Close the file
    fclose(fp);

    return 0;
}
