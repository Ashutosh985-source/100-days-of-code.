#include <stdio.h>

int main() {
    int n, i;
    long long product = 1; // Use long long to handle large products

    // Prompt the user to enter a positive integer
    printf("Enter a positive integer (n): ");
    scanf("%d", &n);

    // Input validation: ensure n is a positive number
    if (n <= 0) {
        printf("Please enter a positive integer.\n");
        return 1; // Exit the program with an error code
    }

    // Loop from 1 to n to find and multiply even numbers
    for (i = 1; i <= n; i++) {
        // Check if the current number is even
        if (i % 2 == 0) {
            product *= i; // Multiply the product by the even number
        }
    }

    // Print the final result
    printf("The product of even numbers from 1 to %d is: %lld\n", n, product);

    return 0;
}