#include <stdio.h>

int main() {
    FILE *fp;
    char filename[50];
    char text[200];

    // Step 1: Ask the user for the filename
    printf("Enter the filename: ");
    scanf("%s", filename);

    // Step 2: Open the file in append mode ("a")
    fp = fopen(filename, "a");
    if (fp == NULL) {
        printf("Error: Could not open file.\n");
        return 1;
    }

    // Step 3: Clear input buffer before taking new line input
    getchar(); // to remove newline character left by scanf()

    // Step 4: Take the new text input from user
    printf("Enter text to append: ");
    fgets(text, sizeof(text), stdin);

    // Step 5: Append the text to the file
    fprintf(fp, "\n%s", text);

    // Step 6: Close the file
    fclose(fp);

    printf("File updated successfully with appended text.\n");

    return 0;
}
