#include <stdio.h>
#include <string.h>

int main() {
    char str[150];
    // A frequency array to count occurrences of 'a' through 'z'
    // Initialized to all zeros.
    int counts[26] = {0}; 
    int i;
    int found = 0; // A flag to check if we found a repeating character

    // Prompt the user for input
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    // Remove the newline character that fgets adds
    str[strcspn(str, "\n")] = 0;

    // Loop through each character of the string
    for (i = 0; str[i] != '\0'; i++) {
        char ch = str[i];

        // Check if the character is a lowercase alphabet
        if (ch >= 'a' && ch <= 'z') {
            // Calculate the index (0 for 'a', 1 for 'b', etc.)
            int index = ch - 'a';

            // If we've seen this character before, it's the first repeat
            if (counts[index] == 1) {
                printf("The first repeating lowercase alphabet is: %c\n", ch);
                found = 1; // Set the flag
                break;     // Exit the loop as we've found our answer
            }

            // Mark this character as seen
            counts[index] = 1;
        }
    }

    // If the loop finished and we didn't find any repeating character
    if (found == 0) {
        printf("No repeating lowercase alphabet found.\n");
    }

    return 0;
}