#include <stdio.h>

int main() {
    int rows, cols;
    int i, j;

    // Get the dimensions of the matrix
    printf("Enter the number of rows: ");
    scanf("%d", &rows);
    printf("Enter the number of columns: ");
    scanf("%d", &cols);

    // Declare the 2D matrix and a 1D array to store row sums
    int matrix[rows][cols];
    int row_sums[rows];

    // Read elements into the matrix
    printf("\nEnter the elements of the matrix:\n");
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            printf("Enter element at position [%d][%d]: ", i, j);
            scanf("%d", &matrix[i][j]);
        }
    }
    
    // --- Core Logic: Calculate the sum of each row ---
    for (i = 0; i < rows; i++) {
        // Initialize the sum for the current row to 0 before calculating
        row_sums[i] = 0; 
        for (j = 0; j < cols; j++) {
            // Add each element of the row to its sum
            row_sums[i] += matrix[i][j];
        }
    }

    // --- Display the Results ---
    printf("\nThe matrix you entered is:\n");
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            printf("%d\t", matrix[i][j]);
        }
        printf("\n");
    }

    printf("\nThe sum of each row is:\n");
    for (i = 0; i < rows; i++) {
        printf("Sum of Row %d: %d\n", i + 1, row_sums[i]);
    }

    return 0;
}