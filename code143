#include <stdio.h>

struct Student {
    char name[50];
    int roll;
    int marks;
};

int main() {
    struct Student s[3];
    int i, topperIndex = 0;

    printf("Enter details of 3 students:\n");

    for (i = 0; i < 3; i++) {
        printf("\nStudent %d:\n", i + 1);
        printf("Enter Name: ");
        scanf("%s", s[i].name);
        printf("Enter Roll: ");
        scanf("%d", &s[i].roll);
        printf("Enter Marks: ");
        scanf("%d", &s[i].marks);
    }

    // Find topper
    for (i = 1; i < 3; i++) {
        if (s[i].marks > s[topperIndex].marks) {
            topperIndex = i;
        }
    }

    printf("\nTopper: %s (Marks: %d)\n",
           s[topperIndex].name,
           s[topperIndex].marks);

    return 0;
}
