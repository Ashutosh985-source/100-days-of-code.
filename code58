#include <stdio.h>

#define MAX_SIZE 100 // Defines the maximum possible size for the array

int main() {
    int arr[MAX_SIZE];
    int n, i;
    int max, min;

    // --- 1. Get array size and elements ---
    printf("Enter the size of the array: ");
    scanf("%d", &n);

    // Handle invalid input
    if (n <= 0 || n > MAX_SIZE) {
        printf("Invalid size. Please enter a number between 1 and %d.\n", MAX_SIZE);
        return 1; // Exit with an error
    }

    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // --- 2. Find the max and min ---
    
    // Assume the first element is both the maximum and minimum
    max = arr[0];
    min = arr[0];

    // Iterate through the array starting from the second element (index 1)
    for (i = 1; i < n; i++) {
        // If the current element is greater than the current max...
        if (arr[i] > max) {
            max = arr[i]; // ...update max
        }

        // If the current element is less than the current min...
        if (arr[i] < min) {
            min = arr[i]; // ...update min
        }
    }

    // --- 3. Print the results ---
    printf("\nMaximum element: %d\n", max);
    printf("Minimum element: %d\n", min);

    return 0;
}