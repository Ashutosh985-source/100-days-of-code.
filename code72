#include <stdio.h>

int main() {
    int rows, cols;
    int i, j;
    long long sum = 0; // Use 'long long' to prevent overflow for large sums

    // Get the dimensions of the matrix from the user
    printf("Enter the number of rows: ");
    scanf("%d", &rows);
    printf("Enter the number of columns: ");
    scanf("%d", &cols);

    // Declare the 2D array with the specified dimensions
    int matrix[rows][cols];

    // Read the matrix elements and calculate the sum
    printf("\nEnter the elements of the matrix:\n");
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            printf("Enter element at position [%d][%d]: ", i, j);
            scanf("%d", &matrix[i][j]);
            sum += matrix[i][j]; // Add the element to the sum
        }
    }

    // Optional: Display the matrix entered by the user
    printf("\nThe matrix you entered is:\n");
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            printf("%d\t", matrix[i][j]);
        }
        printf("\n");
    }

    // Display the final sum
    printf("\nSum of all elements in the matrix: %lld\n", sum);

    return 0;
}