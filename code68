#include <stdio.h>

int main() {
    int arr[100];
    int size, i, position;

    // --- Input the initial array ---
    printf("Enter the number of elements in the array: ");
    scanf("%d", &size);

    printf("Enter %d elements:\n", size);
    for (i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    // --- Input the position of the element to delete ---
    printf("Enter the position of the element to delete (1-based): ");
    scanf("%d", &position);

    // --- Validation and Deletion ---
    if (position < 1 || position > size) {
        printf("Invalid position!\n");
    } else {
        // Convert 1-based position to 0-based index
        int index = position - 1;

        // 1. Shift elements to the left
        // Start from the deletion index and go to the second to last element
        for (i = index; i < size - 1; i++) {
            arr[i] = arr[i + 1];
        }
        
        // 2. Update the size
        size--;

        // --- Print the final array ---
        printf("Array after deletion: ");
        for (i = 0; i < size; i++) {
            printf("%d ", arr[i]);
        }
        printf("\n");
    }

    return 0;
}