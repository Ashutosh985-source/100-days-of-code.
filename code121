#include <stdio.h>

int main() {
    FILE *fp;
    char name[50];
    int age;

    // Open file in write mode
    fp = fopen("info.txt", "w");

    // Check if file is created successfully
    if (fp == NULL) {
        printf("Error opening file!\n");
        return 1;
    }

    // Taking user input
    printf("Enter Name: ");
    scanf("%s", name);

    printf("Enter Age: ");
    scanf("%d", &age);

    // Writing to file using fprintf
    fprintf(fp, "Name: %s Age: %d\n", name, age);

    // Closing the file
    fclose(fp);

    // Display confirmation message
    printf("File created successfully! Data written to info.txt\n");

    return 0;
}
