#include <stdio.h>
#include <limits.h> // Required for INT_MIN

int main() {
    int n, i;
    int largest, second_largest;

    // --- Input Section ---
    printf("Enter the size of the array: ");
    scanf("%d", &n);

    // Edge case: An array with less than 2 elements cannot have a second largest element.
    if (n < 2) {
        printf("Error: Array must have at least two elements.\n");
        return 1; // Exit with an error code
    }

    int arr[n]; // Declare the array

    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // --- Logic Section ---
    // Initialize largest and second_largest to the smallest possible integer value.
    largest = INT_MIN;
    second_largest = INT_MIN;

    // Loop through the array to find the largest and second largest elements.
    for (i = 0; i < n; i++) {
        // If the current element is greater than the largest found so far...
        if (arr[i] > largest) {
            second_largest = largest; // ...the old largest becomes the new second largest.
            largest = arr[i];         // ...and the current element becomes the new largest.
        } 
        // Else if the current element is between the largest and second largest...
        else if (arr[i] > second_largest && arr[i] != largest) {
            second_largest = arr[i]; // ...it becomes the new second largest.
        }
    }

    // --- Output Section ---
    // Check if a second largest element was found.
    // This handles cases where all array elements are the same.
    if (second_largest == INT_MIN) {
        printf("There is no second largest element.\n");
    } else {
        printf("The second largest element in the array is: %d\n", second_largest);
    }

    return 0;
}