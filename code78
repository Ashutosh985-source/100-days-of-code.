#include <stdio.h>

int main() {
    // Assuming the matrix will not be larger than 10x10
    int matrix[10][10];
    int i, j, size;
    int sum = 0; // Initialize sum to 0

    // Get the size of the square matrix from the user
    printf("Enter the size of the square matrix: ");
    scanf("%d", &size);

    // Get the matrix elements from the user
    printf("Enter the elements of the matrix:\n");
    for (i = 0; i < size; i++) {
        for (j = 0; j < size; j++) {
            scanf("%d", &matrix[i][j]);
        }
    }

    // Display the entered matrix (optional, for verification)
    printf("\nThe entered matrix is:\n");
    for (i = 0; i < size; i++) {
        for (j = 0; j < size; j++) {
            printf("%d\t", matrix[i][j]);
        }
        printf("\n");
    }

    // Calculate the sum of the main diagonal elements
    // The main diagonal elements are at indices [0][0], [1][1], [2][2], etc.
    for (i = 0; i < size; i++) {
        sum += matrix[i][i];
    }

    // Print the final sum
    printf("\nThe sum of the main diagonal elements is: %d\n", sum);

    return 0;
}